{% extends 'base.html.twig' %}

{% block body %}
    <div class="example-wrapper">
        <a href="{{ path('app_tour') }}" class="back-link">
            <i class="fa-solid fa-chevron-left"></i>
        </a>
{% block title %}<h1>Ajouter rendez-vous</h1>{% endblock %}
    </div>

    <div class="centered-form">
        {{ form_start(form) }}
        
        <div class="form-row">
            <div class="form-group">
                {{ form_label(form.date, 'Date :') }}
                {{ form_widget(form.date, { 'attr': {'required': 'required'} }) }}
            </div>

            <div class="form-group">
                {{ form_label(form.appointmentTime, 'Heure du rendez-vous :') }}
                {{ form_widget(form.appointmentTime, { 'attr': {'required': 'required'} }) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.patient, 'Patient :') }}
            {{ form_widget(form.patient) }}
        </div>

        <div class="form-group">
            {{ form_label(form.isCompleted, 'Est termin√© ?') }}
            {{ form_widget(form.isCompleted) }}
        </div>

        <div class="button-container-center">
            <button type="submit" class="btn btn-primary">Enregistrer</button>
        </div>

        {{ form_end(form) }}
    </div>
{% endblock %}
