{% extends 'base.html.twig' %}

{% block body %}
    <h1>Messages</h1>

    <ul>
    {% for message in messages %}
        <li>
            <a href="{{ path('chat_detail', {'id': message.id}) }}">
                From {{ message.getSender().getUsername() }} to {{ message.getReceiver().getUsername() }}
            </a>
        </li>
    {% endfor %}
    </ul>
{% endblock %}
